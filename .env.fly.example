# Fly.io Deployment Configuration
# Copy this file to .env.fly and customize for your deployment

# App Configuration
FLY_APP_NAME=my-swarm-dev
FLY_REGION=iad  # See https://fly.io/docs/reference/regions/

# Multi-instance Configuration
CLAUDE_CODE_INSTANCES=6      # Number of Claude Code instances (default: 6)

# Resources (automatically calculated based on instances)
# To override, uncomment and set manually:
# FLY_VM_SIZE=shared-cpu-2x  # Auto-selected based on instances
# FLY_VM_MEMORY=5gb          # Auto-calculated: (instances * 600MB) + 2GB
FLY_VOLUME_SIZE=30         # Size in GB for persistent storage

# SSH Configuration
# Add your SSH public key here (or it will be read from ~/.ssh/id_rsa.pub)
SSH_PUBLIC_KEY=

# Container Configuration
SECURITY_PRESET=development  # paranoid, enterprise, development
NODE_ENV=development

# Cost Controls
AUTO_STOP_MACHINES=true
MIN_MACHINES_RUNNING=0
AUTO_START_MACHINES=true

# Advanced Options
PRIMARY_REGION=iad
HEALTH_CHECK_INTERVAL=15s
HEALTH_CHECK_TIMEOUT=2s

# MCP Servers (optional)
ENABLE_MCP_SERVERS=true
MCP_WORKSPACE_PATH=/workspace

# Deployment Options
SKIP_VOLUMES=false
SKIP_SSH_SETUP=false
VERBOSE=false