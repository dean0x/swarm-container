# Development Security Preset
# Relaxed security for local development

# Security level
SECURITY_PRESET=development

# Container resource limits
CONTAINER_MEMORY=16g
CONTAINER_CPUS=8

# Security flags
NO_NEW_PRIVILEGES=false
READONLY_WORKSPACE=

# API Key (optional - can also use /login command after starting Claude Code)
# ANTHROPIC_API_KEY=sk-ant-...

# Custom allowed domains (not needed in dev mode - all allowed)
# CUSTOM_ALLOWED_DOMAINS=

# Development tools
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true