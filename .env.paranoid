# Paranoid Security Preset
# Maximum security for handling untrusted code

# Security level
SECURITY_PRESET=paranoid

# Container resource limits
CONTAINER_MEMORY=4g
CONTAINER_CPUS=2

# Security flags
NO_NEW_PRIVILEGES=true
READONLY_WORKSPACE=,readonly

# API Key (optional - can also use /login command after starting Claude Code)
# ANTHROPIC_API_KEY=sk-ant-...

# Custom allowed domains (comma-separated)
# Only add domains you absolutely trust
# CUSTOM_ALLOWED_DOMAINS=your-company-api.com,trusted-service.com

# Additional security options
DISABLE_NETWORK_HOST=true
DISABLE_IPC_HOST=true
DISABLE_PID_HOST=true