{
  "name": "SwarmContainer",
  "initializeCommand": "test -f .devcontainer/.env || cp .devcontainer/.env.development .devcontainer/.env",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "target": "local",
    "args": {
      "SECURITY_PRESET": "${localEnv:SECURITY_PRESET:development}"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontFamily": "MesloLGS NF",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        "security.workspace.trust.enabled": true,
        "security.workspace.trust.untrustedFiles": "open"
      }
    }
  },
  "postCreateCommand": "bash /workspace/.devcontainer/scripts/hooks/postCreate.sh || true",
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--security-opt", "seccomp=unconfined",
    "--security-opt", "no-new-privileges:${localEnv:NO_NEW_PRIVILEGES:true}",
    "--memory=${localEnv:CONTAINER_MEMORY:8g}",
    "--memory-swap=${localEnv:CONTAINER_MEMORY:8g}",
    "--cpus=${localEnv:CONTAINER_CPUS:4}",
    "--shm-size=2g",
    "--restart=unless-stopped",
    "--health-cmd=/scripts/health-check.sh",
    "--health-interval=60s",
    "--health-timeout=10s",
    "--health-retries=3",
    "--health-start-period=30s"
  ],
  "containerEnv": {
    "DEVCONTAINER": "true",
    "SHELL": "/bin/zsh",
    "SECURITY_PRESET": "${localEnv:SECURITY_PRESET:development}",
    "CUSTOM_ALLOWED_DOMAINS": "${localEnv:CUSTOM_ALLOWED_DOMAINS:}",
    "NODE_ENV": "development",
    "CLAUDE_CODE_INSTANCES": "${localEnv:CLAUDE_CODE_INSTANCES:6}"
  },
  "overrideCommand": true,
  "shutdownAction": "stopContainer",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "mounts": [
    "source=swarm-commandhistory,target=/commandhistory,type=volume",
    "source=swarm-claude-config,target=/root/.claude,type=volume"
  ]
}